<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('./partials/header.ejs') %>
    </header>
    <h1>Here are all the Posts:</h1>

    <% for (let i=0; i < posts.length; i++) { %>
        <div>
            <h4>
                <%=posts[i].author%>
            </h4>
            <p>
                <%=posts[i].postBody%>
            </p>
            <p>
                <%=posts[i].tags%>
            </p>
            <p>
                <a href="/posts/<%=posts[i]._id%>">View this post on its own</a>
            </p>
            <p>
                <%=posts[i].mentions%>
            </p>
            <% console.log("comparison " +posts[i].createdAt + posts[i].updatedAt) %> 
            <%if (posts[i].createdAt==posts[i].updatedAt) {%>
                <p>
                    <%=posts[i].createdAt%>
                </p>

                <%} else {%>
                    <p>
                        <%=posts[i].updatedAt + " edited" %>
                </p>
                <%}%>
        </div>
        <% } %>
            <a href="/">LANDING PAGE</a>

</body>

</html>