<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('./partials/header.ejs') %>
    </header>
    <h1 class="title">Login Page</h1>
    <form action="/login" method="POST">
        <div class="field">
            <label class="label" for="username">Username</label>
            <input class="input" name="username" type="text" name="username" /><br />
        </div>
        <div class="field">
            <label class="label" for="password">Password</label>
            <input class="input" name="password" type="password" name="password" /><br />
        </div>
        <input type="submit" name="" value="Submit Login" class="button is-primary is-rounded">
    </form>
</body>

</html>